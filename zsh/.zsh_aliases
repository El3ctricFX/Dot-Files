#╚════════════════════════════════════════════════════════╛

alias vi='nvim'
alias svi='sudo nvim'

alias zshrc='source ~/.zshrc'

#╔════════════════════════════════════════════════════════╕
#║		Shortcuts  			          │
#╚════════════════════════════════════════════════════════╛

alias neofetch='fastfetch'
alias fetch='fastfetch'
alias clone='git clone'
alias shutnow='shutdown now'
alias systemctl='sudo systemctl'
alias sys-start='sudo systemctl start'
alias sys-stat='sudo systemctl check'
alias cfolder='cp ~/Templates/custom_folders.sh .'
alias .cf='./custom_folders.sh'
alias cf='cfolder && .cf'
alias ipa='ip a'
alias ifconfig='ip a'
alias todo='dooit'
alias journal='tjournal'
alias color='hyprpicker'
alias bar='cd ~/.config/waybar'
alias reway='killall waybar && nohup waybar &'
alias website='cd ~/Documents/GitHub/website/'
alias rmd='rm -rf'
alias ipconfig='ip a'
alias cd='z'
alias m2pdf='markdown2pdf -p'
alias music='musikcube'
alias usbmount='jmtpfs ~/mountpoint'
alias unusbmount='fusermount -u ~/mountpoint'
alias bible='kjv'

